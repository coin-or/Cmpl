// Variablen
// Die Variablen habe ich hier einzeln definiert, stattdessen könnte man sie auch
// eine Variable x[1..3, 1..3] verwenden, dann ließen sich die Restriktionen kompakter angeben.
var:
	// Hier werden alle Variablen als Binärvariablen deklariert
	// Falls das nicht so ist, muss das hier geändert werden
	x1A, x1B, x1C,
	x2A, x2B, x2C,
	x3A, x3B, x3C,
	x4A, x4B, x4C: binary;

// Zielfunktion
// Die Variablenprodukte lassen sich hier direkt angeben
objective:
	3*x1A*x2B + 8*x1A*x2C +  3*x1B*x2A + 3*x1B*x2C + 7*x1C*x2A +
	3*x1C*x2B + 4*x1A*x2B + 11*x1A*x3C + 4*x1B*x3A + 4*x1B*x3C +
	9*x1C*x3A + 4*x1C*x3A +  3*x2A*x3B + 3*x2A*x3B + 7*x2A*x3C +
	3*x2B*x3A + 3*x2B*x3C +  8*x2C*x3A + 3*x2C*x3B;

// Restriktionen
constraint:
	x1A + x1B + x1C = 1;
	x2A + x2B + x2C = 1;
	x3A + x3B + x3C = 1;

	x1A + x2A + x3A = 1;
	x1B + x2B + x3B = 1;
	x1C + x2C + x3C = 1;

